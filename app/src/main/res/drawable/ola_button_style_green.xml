<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <stroke
                android:width="2dp"
                android:color="@color/green_light" />
            <corners
                android:radius="0dp" />
        </shape>
    </item>
    <item
        android:left="1dp"
        android:top="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/green_light" />
        </shape>
    </item>

</layer-list>