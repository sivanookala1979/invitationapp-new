<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv_events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/rectangle_shaped"
        app:cardCornerRadius="7dp"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:clipChildren="true"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/eventIconHeader"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/event_picture" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingTop="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <com.cerone.invitation.helpers.CeroneTextView
                            android:id="@+id/headerEventName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:ellipsize="end"
                            android:tag="fonts/Montserrat-Medium.otf"
                            android:text="NSC SPORTS MEET"
                            android:textColor="@color/happening_text_black_color"
                            android:textSize="@dimen/text_size_too_small" />

                        <com.cerone.invitation.helpers.CeroneTextView
                            android:id="@+id/entryFeeHeader"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:tag="fonts/Montserrat-Medium.otf"
                            android:text="Free"
                            android:textColor="@color/happening_orange"
                            android:textSize="@dimen/text_size_too_small" />
                    </LinearLayout>

                    <com.cerone.invitation.helpers.CeroneTextView
                        android:id="@+id/eventAddressHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:ellipsize="end"
                        android:tag="fonts/Montserrat-Medium.otf"
                        android:maxLines="1"
                        android:text="N Convension, Jubli Hills, Hyderabad."
                        android:textColor="@color/happening_text_black_color"
                        android:textSize="@dimen/text_size_very_small" />

                    <com.cerone.invitation.helpers.CeroneTextView
                        android:id="@+id/eventTimingsHeading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:ellipsize="end"
                        android:tag="fonts/Montserrat-Medium.otf"
                        android:text="Sat, 18/06/2017 -09:00PM - 10:00PM"
                        android:textColor="@color/happening_text_grey_color"
                        android:textSize="@dimen/text_size_very_small" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey_light" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="1dp"
                        android:layout_weight="2.5"
                        android:background="@color/white">

                        <ImageView
                            android:id="@+id/header_favourite"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/filter_favourite" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="1dp"
                        android:layout_weight="2.5"
                        android:background="@color/white">

                        <ImageView
                            android:id="@+id/header_cart"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/cart_icon" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="1dp"
                        android:layout_weight="2.5"
                        android:background="@color/white">

                        <ImageView
                            android:id="@+id/header_facebook"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/facebook_icon" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="1dp"
                        android:layout_weight="2.5"
                        android:background="@color/white">

                        <ImageView
                            android:id="@+id/header_friendsAttending"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/eye_icon" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="1dp"
                        android:layout_weight="2.5"
                        android:background="@color/white">

                        <ImageView
                            android:id="@+id/header_close"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/close_icon" />
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>