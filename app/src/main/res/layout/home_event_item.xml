<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream"
    android:orientation="vertical" >

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv_events"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="@dimen/activity_horizontal_medium_margin"
        android:layout_marginRight="@dimen/activity_horizontal_medium_margin"
        android:layout_marginTop="@dimen/activity_horizontal_medium_margin"
        android:background="@drawable/rectangle_shaped"
        app:cardCornerRadius="5dp"
        app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:weightSum="100" >

        <TextView
            android:id="@+id/role"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/red"
            android:layout_width="0dp"
            />

        <ImageView
            android:id="@+id/eventPicture"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="25"
            android:scaleType="fitCenter"
            android:background="@drawable/events" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="74"
            android:orientation="vertical"
            android:padding="5dp" >

            <TextView
                android:id="@+id/eventName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:fontFamily="fonts/AvenirNextLTPro-Regular.otf"
                android:text="name"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/startDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:fontFamily="fonts/AvenirNextLTPro-Regular.otf"
                android:text="Start date:"
                android:textColor="@color/black"
                android:textSize="@dimen/text_medium" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="horizontal"
                    android:weightSum="1" >

                    <TextView
                        android:id="@+id/totalInvitees"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ola_button_style_orange"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="100"
                        android:fontFamily="fonts/AvenirNextLTPro-Regular.otf"
                        android:textColor="@color/white"
                        android:textSize="@dimen/very_small_text_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ola_four_side_button_orange"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:fontFamily="fonts/AvenirNextLTPro-Regular.otf"
                        android:text="Invitees"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/very_small_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="horizontal"
                    android:weightSum="1" >

                    <TextView
                        android:id="@+id/eventAcceptCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ola_button_style_green"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="100"
                        android:fontFamily="fonts/AvenirNextLTPro-Regular.otf"
                        android:textColor="@color/white"
                        android:textSize="@dimen/very_small_text_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ola_four_side_button_green"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="Accept "
                        android:fontFamily="fonts/AvenirNextLTPro-Regular.otf"
                        android:textColor="@color/green_light"
                        android:textSize="@dimen/very_small_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="horizontal"
                    android:weightSum="1" >

                    <TextView
                        android:id="@+id/checkedinCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ola_button_style_blue"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="100"
                        android:fontFamily="fonts/AvenirNextLTPro-Regular.otf"
                        android:textColor="@color/white"
                        android:textSize="@dimen/very_small_text_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ola_four_side_button_blue"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:fontFamily="fonts/AvenirNextLTPro-Regular.otf"
                        android:text="Checked In "
                        android:textColor="@color/blue_shade"
                        android:textSize="@dimen/very_small_text_size" />
                </LinearLayout>
            </LinearLayout>

            <!--<TextView-->
                <!--android:id="@+id/eventAddress"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:ellipsize="end"-->
                <!--android:lines="2"-->
                <!--android:text="Address :"-->
                <!--android:textColor="@color/black"-->
                <!--android:textSize="@dimen/text_size"-->
                <!--android:visibility="gone" />-->
        </LinearLayout>

    </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>