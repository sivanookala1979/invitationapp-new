<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/my_theme"
        android:gravity="center"
        app:theme="@style/ThemeOverlay.AppCompat.Dark">

        <TextView
            android:id="@+id/toolbar_title"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Share Event"
            android:textColor="@android:color/white" />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/footerLayout"
        android:layout_below="@+id/toolbar" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <com.cerone.invitation.helpers.CeroneTextView
                    android:id="@+id/eventNameInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="Event Details"
                    android:textSize="@dimen/text_size"
                    android:tag="fonts/Montserrat-Light.otf"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_light" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:orientation="vertical">

                        <com.cerone.invitation.helpers.CeroneTextView
                            android:id="@+id/txt_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:tag="fonts/Montserrat-Light.otf"
                            android:text="DATE"
                            android:textColor="@color/darkgray"
                            android:textSize="@dimen/text_size_small" />

                        <com.cerone.invitation.helpers.CeroneTextView
                            android:id="@+id/event_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:tag="fonts/Montserrat-Light.otf"
                            android:padding="5dp"
                            android:text="Sat, 21/03/2017"
                            android:textColor="@color/black_shade"
                            android:textSize="@dimen/text_size_small" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:orientation="vertical">

                        <com.cerone.invitation.helpers.CeroneTextView
                            android:id="@+id/txt_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:tag="fonts/Montserrat-Light.otf"
                            android:text="TIME"
                            android:textColor="@color/darkgray"
                            android:textSize="@dimen/text_size_small" />

                        <com.cerone.invitation.helpers.CeroneTextView
                            android:id="@+id/event_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:tag="fonts/Montserrat-Light.otf"
                            android:padding="5dp"
                            android:text="11.00AM - 01:00AM"
                            android:textColor="@color/black_shade"
                            android:textSize="@dimen/text_size_small" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_light" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:src="@drawable/location_icon"
                        android:tint="@color/happening_orange" />

                    <com.cerone.invitation.helpers.CeroneTextView
                        android:id="@+id/event_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:ellipsize="end"
                        android:tag="fonts/Montserrat-Light.otf"
                        android:lines="2"
                        android:paddingTop="10dp"
                        android:text="Location details not provided"
                        android:textColor="@color/black_shade"
                        android:textSize="@dimen/text_size_small" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:rotation="-90"
                        android:src="@drawable/near_me"
                        android:tint="@color/gray" />

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_light" />

                <LinearLayout
                    android:id="@+id/extraAddressLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="10"
                            android:background="@drawable/extra_address"
                            android:scaleType="fitXY" />

                        <TextView
                            android:id="@+id/extraAddress"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="90"
                            android:ellipsize="end"
                            android:padding="3dp"
                            android:singleLine="true"
                            android:text="Santhi Nagar"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/black" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/groups"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@color/orange"
                android:minWidth="150dp"
                android:padding="5dp"
                android:text="GROUPS"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size"
                android:visibility="gone"/>

            <Button
                android:id="@+id/contacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@color/gray"
                android:minWidth="150dp"
                android:padding="5dp"
                android:text="CONTACTS"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size"
                android:visibility="gone"/>

            <com.cerone.invitation.helpers.CeroneTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="ATTENDEES"
                android:textColor="@color/blue"
                android:tag="fonts/Montserrat-Light.otf"
                android:textSize="@dimen/text_medium" />

            <ListView
                android:id="@+id/attendeeslist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/white"
                android:dividerHeight="1dp" >
            </ListView>

            <ListView
                android:id="@+id/grouplist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/white"
                android:dividerHeight="1dp" >
            </ListView>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/footerLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/happening_top_botten_style"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_shareEvent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/happening_gray_rectangle"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/share"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/share_icon"
                android:tint="@color/green_light" />

            <com.cerone.invitation.helpers.CeroneTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Share"
                android:textSize="@dimen/text_size"
                android:textColor="@color/event_accept"
                android:tag="fonts/Montserrat-Light.otf" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_cancelEvent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cancel"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/delete_icon"
                android:scaleType="centerInside"
                android:tint="@color/happening_red" />

            <com.cerone.invitation.helpers.CeroneTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Cancel"
                android:textSize="@dimen/text_size"
                android:textColor="@color/happening_red"
                android:tag="fonts/Montserrat-Light.otf" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>