<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/blue_shade"
            android:gravity="center"
            app:theme="@style/ThemeOverlay.AppCompat.Dark">


            <TextView
                android:id="@+id/toolbar_title"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="fonts/AvenirNextLTPro-Regular.otf"
                android:layout_gravity="center"
                android:text="Events"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/toolbarEvent"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:layout_weight="10"
                android:padding="5dp"
                android:scaleType="center"
                android:src="@drawable/new_event" />
        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/shareEventData"
            android:layout_below="@+id/toolbar"
            android:orientation="vertical">

            <ListView
                android:id="@+id/events_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/gray"
                android:dividerHeight="1dp"></ListView>
        </LinearLayout>

        <Button
            android:id="@+id/shareEventData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="2dp"
            android:minWidth="150dp"
            android:padding="5dp"
            android:text="Share Event"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size"
            android:visibility="gone" />
    </RelativeLayout>

    <ListView
        android:id="@+id/left_menu"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/blue_shade"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />

</android.support.v4.widget.DrawerLayout>