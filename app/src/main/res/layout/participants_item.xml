<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/participant_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center">

        <ImageView
            android:id="@+id/eventPicture"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/logo"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7.5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.cerone.invitation.helpers.CeroneTextView
                android:id="@+id/participant_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="55"
                android:tag="fonts/Montserrat-Light.otf"
                android:padding="5dp"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size"
                android:textStyle="normal|bold" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="45"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/call"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    android:padding="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/call"
                    android:tint="@color/black_shade" />

                <ImageView
                    android:id="@+id/chat"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    android:padding="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/chat"
                    android:tint="@color/black_shade" />

                <ImageView
                    android:id="@+id/admin"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/admin"
                    android:tint="@color/darkgray" />

                <ImageView
                    android:id="@+id/block"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/block_icon"
                    android:tint="@color/darkgray" />
            </LinearLayout>
        </LinearLayout>

        <com.cerone.invitation.helpers.CeroneTextView
            android:id="@+id/participant_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="fonts/Montserrat-Light.otf"
            android:padding="5dp"
            android:text="Mobile number"
            android:textColor="@color/black"
            android:textSize="@dimen/text_medium" />

        <com.cerone.invitation.helpers.CeroneTextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="fonts/Montserrat-Light.otf"
            android:padding="5dp"
            android:text="Status"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size"
            android:visibility="gone"/>

        <com.cerone.invitation.helpers.CeroneTextView
            android:id="@+id/distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="fonts/Montserrat-Light.otf"
            android:padding="5dp"
            android:text="Distance"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size"
            android:visibility="gone"/>


    </LinearLayout>

</LinearLayout>