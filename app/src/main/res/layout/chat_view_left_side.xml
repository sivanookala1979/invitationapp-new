<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <ImageView
                android:id="@+id/participantImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/avatar" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/left_chat_text_view_copy"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/chat_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:fontFamily="fonts/AvenirNextLTPro-Regular.otf"
                    android:text="Adverd Waston"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_very_small" />

                <TextView
                    android:id="@+id/date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="fonts/AvenirNextLTPro-Regular.otf"
                    android:text="9:10 AM"
                    android:textColor="@color/blue_shade"
                    android:textSize="@dimen/too_small_text_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="horizontal"
                android:paddingLeft="5dp">

                <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
                    android:id="@+id/msgr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="fonts/AvenirNextLTPro-Regular.otf"
                    android:paddingBottom="5dp"
                    android:paddingRight="5dp"
                    android:text="Hi, how are you?"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_very_small"
                    emojicon:emojiconSize="28sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>