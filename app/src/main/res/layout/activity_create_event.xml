<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cerone.invitation.activities.CreateNewEventActivity">

    <LinearLayout
        android:id="@+id/actionsLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/happening_top_botten_style"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_createEvent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/create"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:scaleType="centerInside"
                android:src="@drawable/done_icon"
                android:tint="@color/happening_indigo" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_shareEvent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/happening_gray_rectangle"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/share"
                android:layout_width="30dp"
                android:layout_height="28dp"
                android:scaleType="centerInside"
                android:src="@drawable/share_icon"
                android:tint="@color/green_light" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_cancelEvent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cancel"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/delete_icon"
                android:scaleType="centerInside"
                android:tint="@color/happening_red" />

        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/linear_layout_superView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/actionsLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fitsSystemWindows="true"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@drawable/my_theme"
                android:gravity="center"
                app:theme="@style/ThemeOverlay.AppCompat.Dark">

                <TextView
                    android:id="@+id/toolbar_title"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="New Event"
                    android:textColor="@android:color/white" />

            </android.support.v7.widget.Toolbar>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/event_name"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_margin="15dp"
                        android:background="@drawable/edit_text_border"
                        android:fontFamily="fonts/AvenirNextLTPro-Regular.otf"
                        android:hint="Event Name"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textSize="@dimen/text_medium" />

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_weight="5"
                            android:background="@drawable/edit_text_border"
                            android:orientation="vertical">

                            <com.cerone.invitation.helpers.CeroneTextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="@drawable/date_time_text_border"
                                android:gravity="center"
                                android:tag="fonts/Montserrat-Light.otf"
                                android:text="Start Date/Time"
                                android:textColor="@color/white"
                                android:textSize="@dimen/small_text_size" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/edit_text_border"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/start_day"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="30"
                                    android:textSize="@dimen/small_text_size" />

                                <TextView
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/grey_light" />

                                <TextView
                                    android:id="@+id/start_month"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="Mar"
                                    android:textSize="@dimen/small_text_size" />

                                <TextView
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/grey_light" />


                                <TextView
                                    android:id="@+id/start_year"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="2017"
                                    android:textSize="@dimen/small_text_size" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layout_start_time"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/edit_text_border"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/start_hour"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="6hr"
                                    android:textSize="@dimen/small_text_size" />

                                <TextView
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/grey_light" />

                                <TextView
                                    android:id="@+id/start_min"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="30min"
                                    android:textSize="@dimen/small_text_size" />

                                <TextView
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/grey_light" />


                                <TextView
                                    android:id="@+id/start_meridiem"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="PM"
                                    android:textSize="@dimen/small_text_size" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:background="@drawable/edit_text_border"
                            android:orientation="vertical">

                            <com.cerone.invitation.helpers.CeroneTextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="@drawable/date_time_text_border"
                                android:gravity="center"
                                android:tag="fonts/Montserrat-Light.otf"
                                android:text="End Date/Time"
                                android:textColor="@color/white"
                                android:textSize="@dimen/small_text_size" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/edit_text_border"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/end_day"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="30"
                                    android:textSize="@dimen/small_text_size" />

                                <TextView
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/grey_light" />

                                <TextView
                                    android:id="@+id/end_month"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="Mar"
                                    android:textSize="@dimen/small_text_size" />

                                <TextView
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/grey_light" />


                                <TextView
                                    android:id="@+id/end_year"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="2017"
                                    android:textSize="@dimen/small_text_size" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layout_end_time"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/edit_text_border"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/end_hour"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="6hr"
                                    android:textSize="@dimen/small_text_size" />

                                <TextView
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/grey_light" />

                                <TextView
                                    android:id="@+id/end_min"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="30min"
                                    android:textSize="@dimen/small_text_size" />

                                <TextView
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/grey_light" />


                                <TextView
                                    android:id="@+id/end_meridiem"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="PM"
                                    android:textSize="@dimen/small_text_size" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_start_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_border"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="vertical">

                        <com.cerone.invitation.helpers.CeroneTextView
                            android:layout_width="match_parent"
                            android:paddingTop="5dp"
                            android:paddingLeft="10dp"
                            android:layout_height="wrap_content"
                            android:tag="fonts/Montserrat-Light.otf"
                            android:text="From"
                            android:textColor="@color/black_shade"
                            android:textSize="@dimen/text_size_intermediate" />

                        <com.cerone.invitation.helpers.CeroneTextView
                            android:id="@+id/startDateTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:tag="fonts/Montserrat-Light.otf"
                            android:text="from date time"
                            android:textColor="@color/gray"
                            android:paddingLeft="10dp"
                            android:paddingBottom="5dp"
                            android:textSize="@dimen/text_medium" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_end_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_border"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <com.cerone.invitation.helpers.CeroneTextView
                            android:layout_width="match_parent"
                            android:paddingTop="5dp"
                            android:paddingLeft="10dp"
                            android:layout_height="wrap_content"
                            android:tag="fonts/Montserrat-Light.otf"
                            android:text="To"
                            android:textColor="@color/black_shade"
                            android:textSize="@dimen/text_size_intermediate" />

                        <com.cerone.invitation.helpers.CeroneTextView
                            android:id="@+id/endDateTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:tag="fonts/Montserrat-Light.otf"
                            android:text="to date time"
                            android:textColor="@color/gray"
                            android:paddingLeft="10dp"
                            android:paddingBottom="5dp"
                            android:textSize="@dimen/text_medium" />
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_margin="15dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/edit_text_border"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <EditText
                            android:id="@+id/event_location"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="9"
                            android:background="@null"
                            android:fontFamily="fonts/AvenirNextLTPro-Regular.otf"
                            android:hint="Event Location"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:textSize="@dimen/text_medium" />

                        <ImageView
                            android:id="@+id/get_location"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:rotation="-90"
                            android:src="@drawable/near_me"
                            android:tint="@color/gray" />

                    </LinearLayout>

                    <com.cerone.invitation.helpers.CeroneTextView
                        android:id="@+id/extra_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:tag="fonts/Montserrat-Light.otf"
                        android:textSize="@dimen/text_medium"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/edit_text_border">

                        <Spinner
                            android:id="@+id/recurringInfo"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginRight="5dp"
                            android:visibility="visible" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="160dp">

                        <ImageView
                            android:id="@+id/event_image"
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:background="@color/cream"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/image_camera"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerInParent="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/camera" />

                    </RelativeLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>

