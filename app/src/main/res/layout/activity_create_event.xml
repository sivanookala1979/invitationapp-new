<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_create_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cerone.invitation.activities.CreateNewEventActivity">

    <LinearLayout
        android:id="@+id/linear_layout_superView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/actionsLayout"
        android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/my_theme"
        android:gravity="center"
        app:theme="@style/ThemeOverlay.AppCompat.Dark">

        <TextView
            android:id="@+id/toolbar_title"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="New Event"
            android:textColor="@android:color/white" />

    </android.support.v7.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <ImageView
                    android:id="@+id/event_image"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@color/cream"
                    android:scaleType="fitXY"/>

                <ImageView
                    android:id="@+id/image_camera"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/camera"
                    android:scaleType="center"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <EditText
                android:id="@+id/event_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="15dp"
                android:background="@drawable/edit_text_border"
                android:fontFamily="fonts/AvenirNextLTPro-Regular.otf"
                android:hint="Event Name"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="@dimen/text_medium"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/edit_text_border"
                    android:orientation="vertical">

                    <com.cerone.invitation.helpers.CeroneTextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Start Date/Time"
                        android:textColor="@color/white"
                        android:textSize="@dimen/small_text_size"
                        android:tag="fonts/Montserrat-Light.otf"
                        android:background="@drawable/date_time_text_border"
                        android:gravity="center"/>

                    <LinearLayout
                        android:id="@+id/layout_start_date"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:background="@drawable/edit_text_border">

                        <TextView
                            android:id="@+id/start_day"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="30"
                            android:textSize="@dimen/small_text_size"
                            android:gravity="center"/>

                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/grey_light"/>

                        <TextView
                            android:id="@+id/start_month"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Mar"
                            android:textSize="@dimen/small_text_size"
                            android:gravity="center"/>

                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/grey_light"/>


                        <TextView
                            android:id="@+id/start_year"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="2017"
                            android:textSize="@dimen/small_text_size"
                            android:gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_start_time"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:background="@drawable/edit_text_border">

                        <TextView
                            android:id="@+id/start_hour"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="6hr"
                            android:textSize="@dimen/small_text_size"
                            android:gravity="center"/>

                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/grey_light"/>

                        <TextView
                            android:id="@+id/start_min"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="30min"
                            android:textSize="@dimen/small_text_size"
                            android:gravity="center"/>

                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/grey_light"/>


                        <TextView
                            android:id="@+id/start_meridiem"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="PM"
                            android:textSize="@dimen/small_text_size"
                            android:gravity="center"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@drawable/edit_text_border"
                    android:orientation="vertical">

                    <com.cerone.invitation.helpers.CeroneTextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="End Date/Time"
                        android:textColor="@color/white"
                        android:textSize="@dimen/small_text_size"
                        android:tag="fonts/Montserrat-Light.otf"
                        android:background="@drawable/date_time_text_border"
                        android:gravity="center"/>

                    <LinearLayout
                        android:id="@+id/layout_end_date"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:background="@drawable/edit_text_border">

                        <TextView
                            android:id="@+id/end_day"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="30"
                            android:textSize="@dimen/small_text_size"
                            android:gravity="center"/>

                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/grey_light"/>

                        <TextView
                            android:id="@+id/end_month"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Mar"
                            android:textSize="@dimen/small_text_size"
                            android:gravity="center"/>

                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/grey_light"/>


                        <TextView
                            android:id="@+id/end_year"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="2017"
                            android:textSize="@dimen/small_text_size"
                            android:gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_end_time"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:background="@drawable/edit_text_border">

                        <TextView
                            android:id="@+id/end_hour"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="6hr"
                            android:textSize="@dimen/small_text_size"
                            android:gravity="center"/>

                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/grey_light"/>

                        <TextView
                            android:id="@+id/end_min"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="30min"
                            android:textSize="@dimen/small_text_size"
                            android:gravity="center"/>

                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/grey_light"/>


                        <TextView
                            android:id="@+id/end_meridiem"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="PM"
                            android:textSize="@dimen/small_text_size"
                            android:gravity="center"/>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="15dp"
                android:orientation="horizontal"
                android:background="@drawable/edit_text_border"
                android:weightSum="10">

                <EditText
                    android:id="@+id/event_location"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:background="@null"
                    android:fontFamily="fonts/AvenirNextLTPro-Regular.otf"
                    android:hint="Event Location"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textSize="@dimen/text_medium"/>

                <ImageView
                    android:id="@+id/get_location"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:rotation="-90"
                    android:src="@drawable/near_me"
                    android:tint="@color/gray" />

            </LinearLayout>

            <Spinner
                android:id="@+id/recurringInfo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/edit_text_border"
                android:visibility="visible" />

            <EditText
                android:id="@+id/extra_address"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="15dp"
                android:background="@drawable/edit_text_border"
                android:fontFamily="fonts/AvenirNextLTPro-Regular.otf"
                android:hint="Extra Address"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="@dimen/text_medium"/>

        </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/actionsLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/happening_top_botten_style"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_createEvent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/create"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/done_icon"
                android:tint="@color/happening_indigo" />

            <com.cerone.invitation.helpers.CeroneTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Save"
                android:textSize="@dimen/text_size"
                android:textColor="@color/happening_indigo"
                android:tag="fonts/Montserrat-Light.otf" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_shareEvent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/happening_gray_rectangle"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/share"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/share_icon"
                android:tint="@color/green_light" />

            <com.cerone.invitation.helpers.CeroneTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Share"
                android:textSize="@dimen/text_size"
                android:textColor="@color/event_accept"
                android:tag="fonts/Montserrat-Light.otf" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_cancelEvent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cancel"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/delete_icon"
                android:scaleType="centerInside"
                android:tint="@color/happening_red" />

            <com.cerone.invitation.helpers.CeroneTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Cancel"
                android:textSize="@dimen/text_size"
                android:textColor="@color/happening_red"
                android:tag="fonts/Montserrat-Light.otf" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

