<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/rectangle_shaped"
        app:cardCornerRadius="7dp"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.cerone.invitation.helpers.CeroneTextView
                    android:id="@+id/eventNameFooter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/my_events_color"
                    android:gravity="center"
                    android:minHeight="40dp"
                    android:tag="fonts/Montserrat-Light.otf"
                    android:text="Jhon's Birthday party"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_medium" />

                <ImageView
                    android:id="@+id/eventImageFooter"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/event_picture" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5">

                    <ImageView
                        android:id="@+id/eventOwnerImage"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/avatar" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6.5"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <com.cerone.invitation.helpers.CeroneTextView
                        android:id="@+id/ownerName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:tag="fonts/Montserrat-Light.otf"
                        android:text="Adarsh"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_medium" />

                    <com.cerone.invitation.helpers.CeroneTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:tag="fonts/Montserrat-Light.otf"
                        android:text="Event Owner"
                        android:textSize="@dimen/text_size_small" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/chatLayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/chatIcon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:duplicateParentState="true"
                        android:src="@drawable/chat_balloon"
                        android:tint="@color/happening_orange" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_light" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp">

                    <com.cerone.invitation.helpers.CeroneTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="fonts/Montserrat-ExtraLight.otf"
                        android:text="Date"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_size_too_small" />

                    <TextView
                        android:id="@+id/eventDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="fonts/Montserrat-Light.otf"
                        android:text="Sat, 15/03/2017"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_too_small" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp">

                    <com.cerone.invitation.helpers.CeroneTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="fonts/Montserrat-Light.otf"
                        android:text="Time"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_size_too_small" />

                    <TextView
                        android:id="@+id/eventTimings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="fonts/Montserrat-Light.otf"
                        android:text="09:10PM - 11:30PM"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_too_small" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/happening_top_border_style"
                android:minHeight="35dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/location_icon"
                        android:tint="@color/happening_orange" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/eventAddressFooter"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7.5"
                    android:ellipsize="end"
                    android:fontFamily="fonts/Montserrat-Light.otf"
                    android:gravity="center_vertical"
                    android:lines="2"
                    android:text="Address details"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_too_small" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5">

                    <ImageView
                        android:id="@+id/nav_address"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:rotation="-90"
                        android:src="@drawable/near_me"
                        android:tint="@color/grey_light" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/participantsStatisticsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/happening_top_border_style"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/totalInvitees"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="fonts/Montserrat-Light.otf"
                        android:gravity="center"
                        android:text="5"
                        android:textColor="@color/happening_orange"
                        android:textSize="@dimen/text_size_small" />

                    <com.cerone.invitation.helpers.CeroneTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:tag="fonts/Montserrat-Light.otf"
                        android:text="invitees"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/totalAccepted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="fonts/Montserrat-Light.otf"
                        android:gravity="center"
                        android:text="4"
                        android:textColor="@color/happening_orange"
                        android:textSize="@dimen/text_size_small" />

                    <com.cerone.invitation.helpers.CeroneTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:tag="fonts/Montserrat-Light.otf"
                        android:text="Accepted"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/totalRejected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="fonts/Montserrat-Light.otf"
                        android:gravity="center"
                        android:text="5"
                        android:textColor="@color/happening_orange"
                        android:textSize="@dimen/text_size_small" />

                    <com.cerone.invitation.helpers.CeroneTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:tag="fonts/Montserrat-Light.otf"
                        android:text="Rejected"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/actionsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/happening_top_botten_style"
                android:minHeight="40dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/actionOne"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/actionOneIcon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/done_icon"
                        android:tint="@color/event_accept" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/actionTwo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/happening_gray_rectangle"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/actionTwoIcon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/question_mark_icon"
                        android:tint="@color/happening_indigo" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/actionThree"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/actionThreeIcon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/delete_icon"
                        android:scaleType="centerInside"
                        android:tint="@color/happening_red" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/participantsLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal">

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_light" />

            <LinearLayout
                android:id="@+id/showEventDetails"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="#ECECEC"
                android:gravity="center">

                <ImageView
                    android:id="@+id/showEventIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    android:src="@drawable/quantum_ic_keyboard_arrow_down_white_36"
                    android:tint="@color/gray" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>


